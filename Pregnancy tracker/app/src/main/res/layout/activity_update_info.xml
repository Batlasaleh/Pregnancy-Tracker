<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8B5D2"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:layout_marginBottom="50dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/icon"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/projectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="متابعة الحمل"
            android:textSize="40sp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="تعديل المعلومات"
        android:gravity="center"
        android:textSize="30sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اسم المتسخدم:"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/password_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="كلمة السر:"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/name_textView"
            android:layout_marginRight="10dp"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/lastperiod_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تاريخ اخر دورة:"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/password_textView"
            android:layout_marginRight="10dp"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/monthnow_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="شهرك الان:"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/lastperiod_textView"
            android:layout_marginRight="10dp"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/ubdate_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تحديث"
            android:layout_below="@+id/monthnow_textView"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="130dp"
            android:background="#F8B5D2"
            android:layout_marginBottom="20dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="إلغاء"
            android:layout_below="@+id/monthnow_textView"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="230dp"
            android:background="#F8B5D2"
            android:layout_marginBottom="20dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/name_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:gravity="right"
            android:textColor="@android:color/black"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/name_textView"
            android:layout_marginRight="19dp"/>

        <EditText
            android:id="@+id/pass_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_editText"
            android:layout_marginTop="5dp"
            android:layout_marginRight="58dp"
            android:layout_toLeftOf="@+id/password_textView"
            android:ems="10"
            android:gravity="right"
            android:inputType="textPassword" />


        <EditText
            android:id="@+id/lastperiod_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="none"
            android:gravity="right"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/lastperiod_textView"
            android:layout_below="@+id/pass_editText"
            android:layout_marginRight="16dp"
            android:cursorVisible="false"
            android:focusable="false"/>

        <EditText
            android:id="@+id/monthnow_editText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="right"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/monthnow_textView"
            android:layout_below="@+id/lastperiod_editText"
            android:layout_marginRight="52dp"
            android:singleLine="true"/>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:background="#AB9EB9">

        <ImageButton
            android:id="@+id/info"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="#AB9EB9"
            android:src="@drawable/ic_info_black_24dp"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"/>

        <ImageButton
            android:id="@+id/home"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="#AB9EB9"
            android:src="@drawable/ic_home_black_24dp"
            android:paddingBottom="10dp"
            android:paddingRight="30dp" />
    </RelativeLayout>

</LinearLayout>