<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8B5D2"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/icon"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/projectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="متابعة الحمل"
            android:textSize="40sp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/expected_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="التاريخ المتوقع"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="15dp"/>

    <EditText
        android:id="@+id/expected_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:text="--/--/----"
        android:textSize="35sp"
        android:layout_margin="15dp"
        android:textColor="@android:color/black"
        android:inputType="none"
        android:cursorVisible="false"
        android:focusable="false"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        app:srcCompat="@drawable/birth"
        android:layout_margin="15dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#AB9EB9">

        <ImageButton
            android:id="@+id/infobuton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="#AB9EB9"
            android:src="@drawable/ic_info_black_24dp"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"/>

        <ImageButton
            android:id="@+id/homebuton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="#AB9EB9"
            android:src="@drawable/ic_home_black_24dp"
            android:paddingBottom="10dp"
            android:paddingRight="30dp" />
    </RelativeLayout>


</LinearLayout>